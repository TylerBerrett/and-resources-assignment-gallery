<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@+id/display_img_left"
                style="@style/VerticalColumn">

            <ImageView
                    android:id="@+id/img_left"
                    android:src="@drawable/abstract_abstract_expressionism_art_2505693"
                    style="@style/VerticalColumnImg"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/display_img_right"
                style="@style/VerticalColumn">

            <ImageView
                    android:id="@+id/img_right"
                    android:src="@drawable/adventure_automobile_classic_2533092"
                    style="@style/VerticalColumnImg"/>


        </LinearLayout>



    </LinearLayout>

</ScrollView>